# Sterling HA Project Environment Variables
# Copy this file to .env and provide real values

# OpenAI and AI Service Configuration
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key
GOOGLE_AI_API_KEY=your-google-ai-key

# Home Assistant Configuration
HOME_ASSISTANT_URL=http://localhost:8123
HA_TOKEN=your-ha-token
HA_ADDON_CONFIG_PATH=addons/sterling_os/config.json

# Local AI Configuration
OLLAMA_MODEL=llama3
SCENE_MAP_PATH=addons/sterling_os/scene_mapper.json
GPT_CONTAINER=gpt4t

# Google Cloud Platform Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
REGION=us-central1
ZONE=us-central1-a

# GCP Services Configuration
ARTIFACT_REGISTRY_REPO=sterling-ha-repo
VERTEX_AI_REGION=us-central1
VERTEX_AI_ENDPOINT_NAME=Sterling HA Endpoint
BIGQUERY_DATASET=sterling_ha_analytics

# Cloud Build Configuration
REPO_OWNER=jdorato376
REPO_NAME=sterling_ha_project
CLOUD_BUILD_TRIGGER_NAME=sterling-ha-trigger

# Monitoring and Logging
MONITORING_ENABLED=true
LOGGING_LEVEL=INFO
COST_TRACKING_ENABLED=true
BILLING_ALERT_THRESHOLD=100.00

# Security Configuration
SHIELDED_VM_ENABLED=true
PRIVATE_VPC_ENABLED=true
CLOUD_NAT_ENABLED=true

# Docker Configuration
DOCKER_REGISTRY=gcr.io
DOCKER_IMAGE_PREFIX=sterling-ha
DOCKER_TAG=latest
