# Sterling HA Project - Environment Configuration
# Copy this file to .env and provide real values

# GCP Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
REGION=us-central1
ZONE=us-central1-a

# API Keys
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key
GOOGLE_AI_API_KEY=your-google-ai-key

# Home Assistant Configuration
HOME_ASSISTANT_URL=http://localhost:8123
HA_TOKEN=your-ha-token
HA_ADDON_CONFIG_PATH=addons/sterling_os/config.json

# AI/ML Configuration
OLLAMA_MODEL=llama3
VERTEX_AI_ENDPOINT=your-vertex-endpoint
VERTEX_AI_MODEL=your-vertex-model
GPT_CONTAINER=gpt4t

# Infrastructure Configuration
VPC_NAME=sterling-ha-vpc
SUBNET_NAME=sterling-ha-subnet
VM_NAME=sterling-ha-vm
SERVICE_ACCOUNT_EMAIL=sterling-ha-vm-sa@your-project.iam.gserviceaccount.com

# Monitoring and Alerts
BILLING_ALERT_THRESHOLD=2.00
SLACK_WEBHOOK_URL=your-slack-webhook
EMAIL_ALERT_RECIPIENT=your-email@domain.com

# Security
WEBHOOK_SECRET=your-webhook-secret
ENCRYPTION_KEY=your-encryption-key

# Build Configuration
DOCKER_REGISTRY=gcr.io
IMAGE_TAG=latest
ARTIFACT_REGISTRY_REPO=sterling-ai-repo

# Optional: Development settings
DEBUG=false
LOG_LEVEL=INFO
SCENE_MAP_PATH=addons/sterling_os/scene_mapper.json
